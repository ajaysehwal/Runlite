{
  "name": "express-ts-template",
  "version": "1.0.0",
  "description": "Secure and robust Express server application",
  "main": "dist/index.js",
  "repository": "https://github.com/ajaysehwal/express-ts-template.git",
  "author": "ajaysehwal <ajaysehwal000@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "cross-env NODE_ENV=development nodemon",
    "debug": "cross-env NODE_ENV=development nodemon --inspect",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "setup:ORM": "node scripts/setups/orm.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "security:audit": "npm audit && snyk test",
    "doc": "typedoc",
    "build:docker": "docker build -t express-ts-template .",
    "clean": "rimraf dist coverage",
    "prestart": "build",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:db:seed": "ts-node prisma/seed.ts",
    "prisma:format": "prisma format"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chalk": "^4",
    "child_process": "^1.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "clear": "^0.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.5",
    "enquirer": "^2.4.1",
    "envalid": "^8.0.0",
    "express": "^4.21.0",
    "express-actuator": "^1.8.4",
    "express-async-handler": "^1.2.0",
    "express-basic-auth": "^1.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-openapi-validator": "^5.0.0",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.0",
    "express-winston": "^4.2.0",
    "fast-safe-stringify": "^2.1.1",
    "figlet": "^1.8.0",
    "firebase-admin": "^12.6.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^3.0.2",
    "readline": "^1.3.0",
    "reflect-metadata": "^0.2.2",
    "response-time": "^2.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@prisma/client": "^5.21.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.17.10",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.8",
    "@types/response-time": "^2.3.8",
    "@types/supertest": "^6.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.0.0",
    "prisma": "^5.21.1",
    "rimraf": "^5.0.0",
    "snyk": "^1.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/index.ts"
  }
}
